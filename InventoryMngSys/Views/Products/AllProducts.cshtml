@model IEnumerable<InventoryMngSys.Models.Product>;

@* Main Div *@
<div class="mt-[1rem] px-[2rem] min-h-[90vh] w-screen">
    @* Header Div *@
    <div class=" h-[10%] w-full flex justify-between">
        <div>
            <h1 class="text-3xl font-bold">
                Products
            </h1>
        </div>
        <div>
            <select class="px-2 pt-1 text-black outline-none rounded-md">
                <option value="value">All</option>
                <option value="high-low">High to Low</option>
                <option value="low-high">Low to High</option>
            </select>
        </div>
    </div>

    @* All Products Div *@

    <div class="grid grid-cols-3 gap-5 items-center mt-[1rem] text-black">
        @* product div *@
        @foreach (var p in Model)
        {
            <div class="w-auto h-auto p-2 rounded-lg bg-gray-200 shadow-lg">
                @* image div *@
                <div class="">
                    <img class=""
                         src="@p.Image"
                         alt="Alternate Text" />
                </div>
                <div class="mt-1">
                    <h4 class="text-xl font-semibold">@p.Name</h4>
                </div>
                <div>  
                    <p class="font-bold">  
                        Price : 
                        <span class="line-through text-gray-600">6999</span> 
                        @p.Price   
                    </p>
                </div>
                <div class="mt-1">
                    <button class="bg-black text-white font-bold p-2 rounded-md">Add to Cart</button>
                </div>
            </div>
        }
        
    </div>

</div>

